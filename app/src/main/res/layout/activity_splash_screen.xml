<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="assignment.rssviewer.activity.main.SplashScreenActivity">


    <ImageView
        android:layout_width="@dimen/splash_logo_width"
        android:layout_height="@dimen/splash_logo_height"
        android:id="@+id/imageView"
        android:src="@drawable/droidrss"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_logo_margin_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RSS "
        android:layout_marginTop="@dimen/splash_title_margin_top"
        android:id="@+id/splash_title_1"
        android:textColor="@color/splash_text_color"
        android:textSize="@dimen/splash_title_size"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="reader"
        android:textColor="@color/splash_text_color"
        android:textSize="@dimen/splash_title_size"
        android:layout_alignTop="@+id/splash_title_1"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/splash_title_2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="read it first !"
        android:id="@+id/splash_slogan"
        android:layout_below="@+id/splash_title_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_slogan_margin_top"
        android:textColor="@color/splash_text_color"
        android:textSize="@dimen/splash_slogan_size"
        android:textStyle="italic"
        />

</RelativeLayout>
